datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./src/generated/prisma"
}

model Paste {
  // The paste's ID
  id String @id

  // The size of the paste in bytes
  size Int

  // The number of views for the paste
  views Int @default(0)

  // When the paste will expire
  expiresAt DateTime?

  // When the paste was created
  timestamp DateTime @default(now())

  // Whether to delete the paste after first read
  deleteAfterRead Boolean @default(false)

  @@map("pastes")
}